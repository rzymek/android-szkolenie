<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.rzymek.todoexpert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name=".TodoApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.rzymek.todoexpert.login.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.rzymek.todoexpert.TodoListActivity"
            android:label="@string/todo_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.rzymek.todoexpert.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName="org.rzymek.todoexpert.TodoListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rzymek.todoexpert.TodoListActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <service android:name="org.rzymek.todoexpert.RefreshIntentService" >
        </service>
    </application>

</manifest>